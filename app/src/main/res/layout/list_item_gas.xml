<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/whiteColor">

    <TextView
        android:id="@+id/gas_staff_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/gasList"
        android:text="姓名：王大锤"/>
    <TextView
        android:id="@+id/gas_group_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/gasList"
        android:text="部门:机电三科"/>
    <TextView
        android:id="@+id/gas_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/gasList"
        android:text="气体信息"/>
    <TextView
        android:id="@+id/gas_ch4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/gasList"
        android:visibility="visible"
        android:text="甲烷"/>
    <TextView
        android:id="@+id/gas_co"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        style="@style/gasList"
        android:text="一氧化碳"/>
    <TextView
        android:id="@+id/gas_o2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        style="@style/gasList"
        android:text="氧气"/>
    <TextView
        android:id="@+id/gas_temperature"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        style="@style/gasList"
        android:text="温度"/>
    <TextView
        android:id="@+id/gas_humidity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        style="@style/gasList"
        android:text="湿度"/>

    <TextView
        android:id="@+id/gas_create_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/gasList"
        android:text="时间：2020-04-23"/>
    <TextView
        android:id="@+id/gas_position"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/gasList"
        android:text="地点:主巷道"/>

</LinearLayout>
