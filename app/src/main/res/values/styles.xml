<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!--解决欢迎页空白情况-->
    <style name="FullScreenWithBackground" parent="@style/Theme.AppCompat.Light">
        <item name="android:windowNoTitle">true</item>//无标题
        <item name="android:windowActionBar">false</item>//无ActionBar
        <item name="android:windowFullscreen">true</item>//全屏即无通知栏
        <item name="android:windowContentOverlay">@null</item>//是否有遮盖
        <item name="android:windowBackground">@mipmap/welcome</item>
    </style>
    <!--首页-->
    <style name="MainBottom">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorMainText</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:button">@null</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item><!--边框-->
        <item name="android:windowIsFloating">true</item><!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">false</item><!--半透明-->
        <item name="android:windowNoTitle">true</item><!--无标题-->
        <item name="android:windowBackground">@color/blackColor</item><!--背景透明-->
        <item name="android:backgroundDimEnabled">false</item><!--模糊-->
    </style>
    <!--个人中心-->
    <style name="center_text">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/whiteColor</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>
    <!--实时气体监测-->
    <style name="gasList">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#333333</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>
</resources>
